<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.access_control.entities.Attendance" table="attendance_log" schema="public"
           catalog="access_control_db">
        <id name="id">
            <column name="id" sql-type="bigint"/>
            <generator class="increment"/>
        </id>
        <property name="time">
            <column name="a_time" sql-type="time"/>
        </property>
        <many-to-one name="employee" class="ru.access_control.entities.Employee" fetch="join" lazy="false">
            <column name="e_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>